<style>
    .main {
        width: 100%;
        max-width: 1200px;
        flex-grow: 1;
        display: grid;
        place-items: center;
    }
    
    .container-login {
        background-color: white;
        border: 1px solid #a5a5a5;
        border-radius: 8px;
        padding: 32px;
        display: flex;
        flex-direction: column;
        row-gap: 32px;
        box-shadow: 2px 4px 6px #00000036;
    }

    .img {
        margin: 0 auto;
        width: 300px;
    }

    h3 {
        text-align: center;
        color: #555555
    }
</style>